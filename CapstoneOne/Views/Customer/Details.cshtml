<h2>Map</h2>
<style>
    #map {
        width: 600px;
        height: 600px;
        display: flex;
        flex:150px;
        align-items: center;
    }
</style>
<br />
<div class="row">
    <div id="map"></div>
    <script 
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBYhDAdoRV0fCL_ME_ssdoj3JXD_6OQE8M&callback=initMap&libraries=&v=weekly" async>
    </script>
    <script>
            var map;
            var marker;
            function initMap() {
                map = new google.maps.Map(document.getElementById('map'), {
                    center: { lat:@Model.Latitude, lng:@Model.Longitude},
                    zoom: 8,
                    mapTypeId: "roadmap"
                });
                marker = new google.maps.Marker({
                    position: { lat: @Model.Latitude, lng: @Model.Longitude },
                    map: map
                });
            }
    </script>
